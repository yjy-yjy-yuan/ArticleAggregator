{
  "project_name": "AI学生知识库聚合系统",
  "description": "专为AI/ML学生定制的技术文章聚合测试配置",
  "version": "1.0.0-test",
  "created_date": "2025-01-15",

  "target_audience": {
    "primary": "AI领域的大学生和研究生",
    "focus_areas": [
      "机器学习基础",
      "深度学习",
      "自然语言处理",
      "计算机视觉",
      "强化学习"
    ],
    "excluded_content": [
      "播客(Podcasts)",
      "视频(Videos)",
      "推文(Twitter/X)",
      "商业科技",
      "产品设计",
      "纯工程实践"
    ]
  },

